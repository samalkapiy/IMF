<?xml version="1.0"?>
<run>
    <tool>
        <title>IMF graphing and calculations</title>
        <about>Press Simulate to view results.</about>
        <command>python @tool/imf.py @driver</command>
    </tool>
    <input>
        <string id="formula1">
            <about>
                <label>P(m)</label>
                <hints>Example: m**-0.3</hints>
            </about>
            <size>10x5</size>
	    <default>m**-0.3</default>
        </string>
	<number id="m1_min">
		<about>
			<label>From m</label>
			<description>This is the lower mass limit.</description>
		</about>
		<default>0.01</default>
        </number>
        <number id="m1_max">
                <about>
                        <label>To m</label>
                        <description>This is the upper mass limit.</description>
                </about>
                <default>0.08</default>
        </number>
        <string id="formula2">
            <about>
                <label>P(m)</label>
                <hints>Example: m**-1.3</hints>
            </about>
            <size>10x5</size>
	    <default> m**-1.3</default>
    	</string>
	<number id="m2_min">
                <about>
                        <label>From m</label>
                        <description>This is the lower mass limit.</description>
                </about>
                <default>0.08</default>
        </number>
	<number id="m2_max">
                <about>
                        <label>To m</label>
                        <description>This is the upper mass limit.</description>
                </about>
                <default>0.5</default>
        </number>
        <string id="formula3">
            <about>
                <label>P(m)</label>
                <hints>Example: m**-2.3</hints>
            </about>
            <size>10x5</size>
            <default> m**-2.3</default>
    	</string>
	<number id="m3_min">
                <about>
                        <label>From m</label>
                        <description>This is the lower mass limit.</description>
                </about>
                <default>0.5</default>
        </number>
	<number id="m3_max">
                <about>
                        <label>To m</label>
                        <description>This is the upper mass limit.</description>
                </about>
                <default>100</default>
	</number>
	<string id="formula4">
		<title>Enter a function to calculate the average using IMF</title>
            <about>
		    <label>f(m)</label>
		    <description>This is the Input Function to calculate averages of mass,luminosity, etc. </description>
                <hints>Example: m</hints>
            </about>
            <size>10x5</size>
            <default> m</default>
        </string>
    </input>
</run>
